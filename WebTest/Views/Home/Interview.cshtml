
@{
    ViewBag.Title = "Interview";
}

@model WebTest.Models.Guest

<h2>Interview</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <p>Write name : @Html.TextBoxFor(el => el.Name, new { @Value = @ViewBag.Name })</p>
    <p>Write email : @Html.TextBoxFor(el => el.Email, new { @Value = @ViewBag.Email })</p>
    <p>
        Get email notification: 
        @Html.DropDownListFor(el => el.WillAttend,
       new[]
       { 
           new SelectListItem() {
               Text = "Yes",
               Value = bool.TrueString
           },
           new SelectListItem() {
               Text = "No",
               Value = bool.FalseString
           },
       })
    </p>
    <input type="submit" value="Confirm">
}

